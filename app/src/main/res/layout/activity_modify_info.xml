<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModifyInfo">

    <include
        android:id="@+id/include5"
        layout="@layout/action_bar" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_ellipse_long_info"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="头像"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

            <View style="@style/occupy_horizontal_free" />

            <cn.smssdk.ui.companent.CircleImageView
                android:id="@+id/info_detail_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/style_ellipse_long_info"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

            <View style="@style/occupy_horizontal_free" />

            <EditText
                android:id="@+id/info_detail_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

        </LinearLayout>

        <View style="@style/Dividing_Line" />

        <LinearLayout
            android:id="@+id/info_detail_class_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_class" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="班级"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2"/>

            <View style="@style/occupy_horizontal_free" />

            <EditText
                android:id="@+id/info_detail_class"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:inputType="number"
                android:text="请假人姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

        </LinearLayout>

        <View style="@style/Dividing_Line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_sex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

            <View style="@style/occupy_horizontal_free" />

            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View style="@style/occupy_horizontal_free" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="@dimen/fontSize_2" />

                <View style="@style/occupy_horizontal_free" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="@dimen/fontSize_2" />

                <View style="@style/occupy_horizontal_free" />

            </RadioGroup>

        </LinearLayout>

        <View style="@style/Dividing_Line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

            <View style="@style/occupy_horizontal_free" />

            <EditText
                android:id="@+id/info_detail_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

        </LinearLayout>

        <View style="@style/Dividing_Line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="邮箱"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

            <View style="@style/occupy_horizontal_free" />

            <EditText
                android:id="@+id/info_detail_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/smssdk_input_bg_focus"
                android:gravity="center"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/face_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:background="@drawable/style_ellipse_long_info"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_info_face" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="人脸信息："
                android:textColor="@color/black"
                android:textSize="@dimen/fontSize_2" />

        </LinearLayout>

        <ImageView
            android:id="@+id/info_detail_face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/info_detail_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/style_ellipse_button_blue"
        android:letterSpacing="0.1"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>