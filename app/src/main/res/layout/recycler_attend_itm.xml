<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/input_padding_short"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/attend_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/fontSize_2"/>

                <TextView
                    android:id="@+id/attend_item_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize_2"
                    android:layout_marginTop="5dp"
                    android:text="开始时间"/>

                <TextView
                    android:id="@+id/attend_item_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/fontSize_2"
                    android:text="结束时间"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize_2"
                    android:layout_marginTop="5dp"
                    android:text="签到方式："/>

                <TextView
                    android:id="@+id/attend_item_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize_2"
                    android:layout_marginStart="30dp"/>

            </LinearLayout>

            <View
                android:layout_marginEnd="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/gray"/>

        </LinearLayout>

        <TextView
            android:id="@+id/attend_item_current_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSize_2"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:text="未开始"/>

    </LinearLayout>

    <View style="@style/Dividing_Line"/>

</LinearLayout>